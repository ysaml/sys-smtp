        <set-variable value="" doc:name="emailContent" doc:id="cfbb2973-d58b-45dd-8d9a-1ea6d6fd9eb0" variableName="emailContent" />
		<set-variable value="#[payload.subject]" doc:name="emailSubject" doc:id="3d994af5-6970-4c76-8f73-cd81ceac3b66" variableName="emailSubject" />
		<ee:transform doc:name="Transform to JSON" doc:id="69815250-fe70-4a8c-bb5b-7c48a0b69438">
			<ee:message>
				<ee:set-payload><![CDATA[%dw 2.0
output application/java
---
payload]]></ee:set-payload>
			</ee:message>
		</ee:transform>
		<set-variable value="#[payload.attachment]" doc:name="fileAttachment" doc:id="5bf03c5a-930b-4f24-af6d-df04e979e054" variableName="fileAttachment" />
