		<email:send doc:name="email with csv" doc:id="f0c3e0ec-8222-470a-a980-588ed9df0ea4" config-ref="Email_SMTP" fromAddress="milesbacolod1@gmail.com" subject="#[vars.emailSubject]" toAddresses='#[attributes.queryParams.recipient splitBy(",")]' ccAddresses='#[attributes.queryParams.cc splitBy(",")]' bccAddresses='#[attributes.queryParams.bcc splitBy(",")]'>
